<% if notice %>
<p id="notice"><%= notice %> </p>
<% end %>
<h1>Your Book Catalog  </h1>
<% if session[:counter] > 5 %>
<%= pluralize session[:counter], 'count' %>
<% end %>
<%  @products.each do |product| %>
<div class="entry">
  <%= link_to image_tag(product.image_url), line_items_path(:product_id => product), :method => :post %>
  <h2><%= product.title %></h2>
<%=sanitize product.description %>
  <div class="price_line">
    <span class="price"><%= number_to_currency(product.price) %></span>
    <%= button_to 'Give me your money now', line_items_path(:product_id => product) %>
  </div>
</div>
<%  end %>

